<Window x:Class="_313616HelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_313616HelloWorld"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800" FontSize="25">
    <Canvas x:Name="MyCanvas">
        <Label Content="Hello World" x:Name="lblOutput" Width="800"/>
        <TextBox Text="type name here" x:Name="txtName" Canvas.Top="80" Width="790" Height="60"/>
        <Button Content="click me" x:Name="btnGreeting" Click="BtnGreeting_Click" Canvas.Top="160" Width="790"/>
    </Canvas>
</Window>
